<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="filledButton_style">
        <!-- Customize your theme here. -->
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/filled_button_background</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="emptyButton_style">
        <!-- Customize your theme here. -->
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/empty_button_background</item>
        <item name="android:textColor">#29BDFF</item>
    </style>

    <style name="logo_style">
        <!-- Customize your theme here. -->
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/logo_background</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="google_sign_in_style">
        <!-- Customize your theme here. -->
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/google_sign_in_background</item>
    </style>

    <style name="autocomplete_textview_style">
        <!-- Customize your theme here. -->
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/auto_textview_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
