<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.varun.bookedu.MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        style="@style/logo_style"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:elevation="2dp"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/signin_button"
        style="@style/filledButton_style"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signup_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="@string/signin" />

    <Button
        android:id="@+id/signup_button"
        style="@style/emptyButton_style"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/signin_button"
        android:layout_marginBottom="71dp"
        android:text="@string/signup" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/pacifico"
        android:text="Book.edu"
        android:textColor="@android:color/black"
        android:textSize="25sp" />
</RelativeLayout>
