<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    android:elevation="90dp"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White">


        <ImageView
            android:id="@+id/book_image_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            app:srcCompat="@drawable/gradient_background"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/book_name_textView"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/book_image_imageView"
            android:layout_toEndOf="@+id/book_image_imageView"
            android:hint="Book Name"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:singleLine="true"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/author_name_textView"
            android:layout_toEndOf="@+id/book_image_imageView"
            android:singleLine="true"
            android:text="Edition: "
            android:textColor="@color/dark_grey"
            />

        <TextView
            android:id="@+id/author_name_textView"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_name_textView"
            android:layout_toEndOf="@+id/book_image_imageView"
            android:hint="Author Names"
            android:textColor="@color/dark_grey"
            android:textColorHint="@color/login" />

        <TextView
            android:id="@+id/edition_number_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/author_name_textView"
            android:layout_toEndOf="@+id/textView7"
            android:textColor="@android:color/black"
            android:textColorHighlight="@color/login"
            android:textColorHint="@color/login" />

        <TextView
            android:id="@+id/price_textView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/book_image_imageView"
            android:layout_alignParentEnd="true"
            android:layout_margin="4dp"
            android:drawableLeft="@drawable/rupee"
            android:paddingLeft="16dp"
            android:ems="10"
            android:gravity="center_horizontal|center|start"
            android:inputType="number"
            android:textColor="@color/colorPrimary"
            android:textColorHighlight="@color/colorPrimary"

            />

        <TextView
            android:id="@+id/rating_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_toEndOf="@+id/book_image_imageView"
            android:hint="4.0"
            android:textColor="@color/login"
            android:textColorHint="@color/login" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rating_textView"
            android:layout_toEndOf="@+id/rating_textView"
            android:text="/5.0"
            android:textColor="@color/dark_grey"
            android:drawableRight="@drawable/star_image"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>